# GDPR Anonymizer Configuration Example
# Copy this file to config.yaml and customize

llm:
  # LLM provider: "claude", "openai", or "ollama"
  provider: "claude"

  # Model identifier (provider-specific)
  # Claude: claude-3-5-sonnet-20241022, claude-3-opus-20240229
  # OpenAI: gpt-4, gpt-3.5-turbo
  # Ollama: gemma-custom, llama2, mistral
  model: "claude-3-5-sonnet-20241022"

  # Temperature (0.0 = deterministic, 1.0 = creative)
  temperature: 0.1

  # Maximum tokens in response
  max_tokens: 4096

  # Environment variable name for API key
  # Set the actual key in your environment:
  # export ANTHROPIC_API_KEY=your-key-here
  api_key_env: "ANTHROPIC_API_KEY"

  # Ollama-specific configuration (only needed if provider is "ollama")
  ollama:
    # Ollama server URL
    # Can also be set via OLLAMA_HOST environment variable
    base_url: "http://localhost:11434"

    # Optional authentication token for secured Ollama instances
    # Can also be set via OLLAMA_AUTH_TOKEN environment variable
    auth_token: null

agents:
  agent1:
    name: "ANON-EXEC"
    enabled: true
    prompt_version: "v1"

  agent2:
    name: "DIRECT-CHECK"
    enabled: true
    prompt_version: "v1"

  agent3:
    name: "RISK-ASSESS"
    enabled: true
    prompt_version: "v1"

orchestration:
  # Maximum retry iterations if validation fails
  max_iterations: 3

  # Overall timeout for anonymization process (seconds)
  timeout_seconds: 300
